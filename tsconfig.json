{
    "compilerOptions": {
        "paths": { "*": ["types/*"] },
        "baseUrl": "src",
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "module": "es6",
        "target": "es6",
        "jsx": "react",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "typeRoots": ["src/types", "node_modules/@types"]
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*"]
}
